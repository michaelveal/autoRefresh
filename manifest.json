{
    "manifest_version": 3,
    "name": "Auto Refresh",
    "version": "1.0",
    "description": "Auto-refresh the current page based on user-selected rate.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png", 
        "48": "icon.png", 
        "128": "icon.png" 
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  